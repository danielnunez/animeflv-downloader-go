# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

[*.go]
indent_size = 4
trim_trailing_white_spaces = true

[*.md]
indent_size = 2

[*.toml]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 2

[Dockerfile]
indent_size = 4
